<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content">    <LinearLayout        android:layout_width="150dp"        android:layout_height="100dp"        android:orientation="vertical">        <ImageView            android:layout_marginTop="10dp"            android:layout_width="wrap_content"            android:layout_height="60dp"            android:src="@drawable/genre"/>        <TextView            android:id="@+id/genre_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="name"            android:textSize="@dimen/text_content"            android:textAlignment="center"            android:layout_marginTop="5dp"/>    </LinearLayout></RelativeLayout>