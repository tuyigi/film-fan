<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="190dp"    xmlns:app="http://schemas.android.com/apk/res-auto">        <androidx.cardview.widget.CardView        android:id="@+id/movie_card"    android:layout_width="match_parent"    app:cardElevation="10dp"    app:contentPadding="5dp"    android:layout_height="180dp">                    <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="horizontal"                android:weightSum="5">                <ImageView                    android:id="@+id/poster"                    android:layout_width="0dp"                    android:layout_weight="2"                    android:scaleX="1.4"                    android:src="@drawable/sample_movie"                    android:layout_height="match_parent"                    tools:ignore="Suspicious0dp" />                <LinearLayout                    android:layout_width="0dp"                    android:layout_weight="3"                    android:orientation="vertical"                    android:layout_height="match_parent"                    >                    <TextView                        android:id="@+id/title"                        android:layout_marginLeft="10dp"                        android:layout_marginTop="5dp"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textColor="@color/textColorPrimary"                        android:textSize="18dp"                        android:text="Movie title"/>                    <LinearLayout                        android:layout_marginLeft="10dp"                        android:layout_marginTop="5dp"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:src="@drawable/release_date"/>                        <TextView                            android:id="@+id/release_date"                            android:layout_marginLeft="5dp"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:textColor="@color/textColorPrimary"                            android:textSize="18dp"                            android:text="2021-05-26"/>                    </LinearLayout>                    <LinearLayout                        android:layout_marginLeft="10dp"                        android:layout_marginTop="5dp"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:src="@drawable/popurality"/>                        <TextView                            android:id="@+id/popularity"                            android:layout_marginLeft="5dp"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:textColor="@color/textColorPrimary"                            android:textSize="18dp"                            android:text="5678"/>                    </LinearLayout>                    <RatingBar                        android:layout_marginTop="10dp"                        android:id="@+id/movie_rate"                        style="@android:attr/ratingBarStyleSmall"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:scaleX=".5"                        android:scaleY=".5"                        android:transformPivotX="0dp"                        android:transformPivotY="0dp"                        android:isIndicator="true"                        android:numStars="5"                        android:rating="3.5"                        android:max="5" />                </LinearLayout>            </LinearLayout>            </androidx.cardview.widget.CardView>    </RelativeLayout>