<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".activities.movie_details.details"><RelativeLayout    android:layout_width="match_parent"    android:layout_height="60dp"    android:background="@color/primary">    <ImageView        android:id="@+id/back"        android:layout_width="50dp"        android:layout_marginTop="5dp"        android:layout_height="50dp"        android:src="@drawable/ic_back"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Details"        android:textColor="@color/textColorSecondary"        android:textSize="@dimen/text_app_bar"        android:textAlignment="center"        android:layout_marginLeft="50dp"        android:layout_marginRight="50dp"        android:layout_marginTop="5dp"        /></RelativeLayout>    <ScrollView        android:id="@+id/contentScroll"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <ImageView            android:id="@+id/poster"            android:layout_width="match_parent"            android:layout_height="300dp"            android:scaleType="fitXY"            android:src="@drawable/ic_image"/>        <LinearLayout            android:layout_width="match_parent"            android:weightSum="5"            android:layout_height="wrap_content">            <TextView                android:id="@+id/title"                android:textStyle="bold"                android:textColor="@color/primary"                android:layout_width="0dp"                android:layout_weight="4"                android:layout_height="wrap_content"                android:text="loading..."                android:textSize="@dimen/text_title"/>            <ImageView                android:id="@+id/favourite"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="40dp"                android:src="@drawable/favourite"/>        </LinearLayout>            <TextView                android:id="@+id/release_year"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="loading..."                android:textSize="@dimen/text_content"/>        <TextView            android:id="@+id/overview"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="loading..."            android:textSize="@dimen/text_content"/>        <LinearLayout            android:weightSum="4"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RatingBar                android:layout_marginTop="10dp"                android:id="@+id/movie_rate"                style="@android:attr/ratingBarStyleSmall"                android:layout_width="0dp"                android:layout_weight="2"                android:layout_height="wrap_content"                android:scaleX=".5"                android:scaleY=".5"                android:transformPivotX="0dp"                android:transformPivotY="0dp"                android:isIndicator="true"                android:numStars="5"                android:rating="3.5"                android:max="5" />            <TextView                android:id="@+id/rate"                android:layout_marginTop="10dp"                android:layout_width="0dp"                android:layout_height="30dp"                android:layout_weight="2"                android:textStyle="bold"                android:text="Click here to rate"/>            <Button                android:id="@+id/button_rate_movie"                android:visibility="gone"                android:layout_width="0dp"                android:layout_height="40dp"                android:layout_weight="2"                android:text="rate"/>        </LinearLayout>        <TextView            android:id="@+id/genre"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Genres"            android:textSize="@dimen/text_title"/>        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/genres_list"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Similar Movies"            android:textSize="@dimen/text_title"/>        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/recommended_movie"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>    </LinearLayout>    </ScrollView></LinearLayout>