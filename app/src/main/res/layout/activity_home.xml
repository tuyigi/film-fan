<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="@color/background"    tools:context=".activities.home.home">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="60dp"        android:background="@color/primary"        >        <ImageView            android:id="@+id/logoMovie"            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/movie"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:layout_alignParentLeft="true"/>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Film Fan"            android:textSize="@dimen/text_app_bar"            android:textColor="@color/textColorSecondary"            android:textStyle="bold"            android:textAlignment="center"            android:layout_marginTop="15dp"            android:layout_marginLeft="60dp"            android:layout_marginRight="60dp"/>        <ImageView            android:id="@+id/favourite"            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/favourite"            android:layout_marginRight="10dp"            android:layout_marginTop="5dp"            android:layout_alignParentRight="true"/>    </RelativeLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/movieList"        android:visibility="gone"        android:layout_width="match_parent"        android:layout_height="match_parent"/>    <ProgressBar        android:id="@+id/loading"        android:layout_gravity="center"        android:layout_marginTop="60dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"/></LinearLayout>